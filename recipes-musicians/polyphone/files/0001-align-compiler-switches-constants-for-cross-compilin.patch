index 6b91da3..6a82c57 100644
--- a/lib/sfarklib/sfklCrunch.cpp
+++ b/lib/sfarklib/sfklCrunch.cpp
@@ -72,7 +72,7 @@ static BYTE nb[1 << (AWORD_BITS-1)]; // Array to hold number of bits needed to r
