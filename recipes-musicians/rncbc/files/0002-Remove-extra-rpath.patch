diff --git a/src/src_ui.pro b/src/src_ui.pro
index 081e3af..132d5b4 100644
--- a/src/src_ui.pro
+++ b/src/src_ui.pro
@@ -69,7 +69,7 @@ unix {
 
 	target.path = $${LIBDIR}
 
-	LIBS += -l$${NAME} -Wl,-rpath,$${LIBDIR}
+	LIBS += -l$${NAME}
 }
 
 QT += widgets xml
