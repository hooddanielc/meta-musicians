-            break;
-    fclose(ps);
-
-    if(!strstr(buffer, "jack"))
-        return;
-#endif
-
     jack_client_t *client = jack_client_open("temp-client",
-                                             JackNoStartServer, 0);
+                                             JackNullOption, 0);
     if(client) {
         rate = jack_get_sample_rate(client);
         jack_client_close(client);
